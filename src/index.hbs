<!DOCTYPE html>
<html lang="uk">
  <head>
    {{>partials/meta title="Posts"}}
  </head>
  <body>
    <div class="posts-list"></div>
    <span class="loader" id="postsLoader" style="display: none;"></span>
    <button class="btn" id="loadMoreBtn">Load More</button>

    <div class="modal" id="postModal" hidden>
      <div class="modal-backdrop">
        <div class="modal-content">
          <h2 class="modal-title skeleton-loading"></h2>
          <p class="modal-body skeleton-loading"></p>

          <h3 class="modal-subtitle">Comments</h3>
          <div class="comments-list">
            <div class="comment-placeholder skeleton-loading"></div>
            <div class="comment-placeholder skeleton-loading"></div>
            <div class="comment-placeholder skeleton-loading"></div>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
